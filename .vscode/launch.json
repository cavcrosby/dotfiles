{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "gdb Launch (Windows)",
          "type": "cppdbg",
          "request": "launch",
          "program": "${command:cmake.launchTargetPath}",
          "args": [],
          "stopAtEntry": true,
          "cwd": "${workspaceFolder}",
          "externalConsole": true,
          "MIMode": "gdb",
          "miDebuggerPath": "C:\\Mingw-w64\\mingw64\\bin\\gdb.exe",
          "logging": { "engineLogging": true},
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
      },
      {
        "name": "gdb Launch (Linux)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${command:cmake.launchTargetPath}",
        "args": [],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "logging": { "engineLogging": true},
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    }

  ]
}